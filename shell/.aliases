clink() {
    composer config repositories.$2 '{"type": "path", "url": "'$1'"}'
}

ufork() {
    git fetch upstream &&
    git checkout $1 &&
    git rebase upstream/$1 &&
    git push -f origin $1
}

commit () {
    commitMessage="$1"
    if [ "$commitMessage" = "" ]
    then
        commitMessage="wip"
    fi
    git add .
    eval "git commit -a -m '${commitMessage}'"
}

